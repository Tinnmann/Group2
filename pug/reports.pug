  .container 
    .row
      .col-sm-12
        h2.text-center#whiteText Crime Reports
        .panel-body 
          .row
            .col-sm-3.col-sm-offset-9
              form(action="#" method="get")
                .input-group
                  input(type="text" name="q" placeholder="Search for" required).form-control#system-search
                  span.input-group-btn
                    button(type="submit").btn.btn-default
                      i.glyphicon.glyphicon-search
          
          .span3  
            .row
              .col-sm-12
                .table-responsive
                  table.table.table-list-search#reportTable
                    thead
                      tr
                        th CrimeID
                        th Posted By:
                        th Date
                        th Location
                        th Time
                        th Crime Type
                        th Status
                        th Details
                        th Delete
                    tbody
                      tr
                        td test
                        td test
                        td test
                        td test
                        td test
                        td test
                        td 
                          .currentStatus
                            span.label.label-warning Open
                            button(type = "button" name="editButton" data-toggle="modal" data-target="#editModal").btn.btn-default#editButton
                              i.glyphicon.glyphicon-pencil
                        td
                          button(type="button" data-title="Details" data-toggle="modal" data-target="#detailsModal").btn.btn-success.btn-xs 
                            span.glyphicon.glyphicon-zoom-in
                        td 
                          button(type="button" name="delete").btn.btn-danger.btn-xs 
                            span.glyphicon.glyphicon-remove
                          
                          
                      tr
                        td test
                        td test
                        td test
                        td test
                        td test
                        td test
                        td 
                          .currentStatus
                            span.label.label-primary closed
                            button(type = "button" name="editButton" data-toggle="modal" data-target="#editModal").btn.btn-default#editButton
                              i.glyphicon.glyphicon-pencil
                        td
                            button(type="button" data-title="Details" data-toggle="modal" data-target="#detailsModal").btn.btn-success.btn-xs 
                              span.glyphicon.glyphicon-zoom-in
                        td 
                          button(type="button" name="delete").btn.btn-danger.btn-xs 
                            span.glyphicon.glyphicon-remove
          .row
            .col-sm-3
              button(type="button" data-toggle="modal" data-target="#myModal").btn.btn-info submit a Report 
              
          div(role="dialog").modal.fade#myModal
            .modal-dialog
      
              .modal-content
                .modal-header.text-center#header Submit a report
                  button(type="button" data-dismiss="modal").close &times
                        
                .modal-body
                  form(method="post" action="#" name="report-form")#report-form.form-horizontal
                    
                      .form-group
                        label(for ="officerID").col-sm-2.control-label Officer ID
                        .col-sm-4
                          input(type="text" name="officerID" required)
                         
                      .form-group
                        label(for="date").col-sm-2.control-label Date
                        .col-sm-4
                          input(id="date" name="date" placeholder="MM/DD/YYYY" type="text" data-date-end-date="0d" required)
                            
                        label(for="location").col-sm-2.control-label Location
                        .col-sm-4
                          select(name="location" required)#modal-select
                            option Athlone
                            option Belhar
                            option Bellville
                            option Bellville South
                            option Bishop Lavis
                            option Bothasig
                            option Brackenfell
                            option Camps Bay
                            option Cape Town Central
                            option Cape Town Central
                            option Claremont
                            option Delft
                            option Diep Rivier
                            option Durbanville
