        li
          a(href="contact.html") Contact Us
          
  .container 
    .row
      .col-sm-12
        h2.text-center#whiteText Reports
        .panel-body 
          
          .col-sm-3.col-sm-offset-9
            form(action="#" method="get")
              .input-group
                input(type="text" name="q" placeholder="Search for" required).form-control#system-search
                span.input-group-btn
                  button(type="submit").btn.btn-default
                    i.glyphicon.glyphicon-search
                               
          table.table.table-list-search
            thead
              tr
                th CrimeID
                th Posted By:
                th Date
                th Location
                th Time
                th Crime Type
                th Status
            tbody
              tr
                td test
                td test
                td test
                td test
                td test
                td test
                td 
                  span.label.label-danger Open
                  
              tr
                td stest
                td test
                td test
                td test
                td test
                td test
                td 
                  span.label.label-primary closed
                                
          button(type="button" data-toggle="modal" data-target="#myModal").btn.btn-info.btn-lg submit a Report 
            
          div(role="dialog").modal.fade#myModal
            .modal-dialog
              
              .modal-content
                .modal-header.text-center#header Submit a report
                  button(type="button" data-dismiss="modal").close &times
                        
                .modal-body
                  form(method="post" action="#").form-horizontal
                    
                      .form-group
                        label(for="date").col-sm-2.control-label Date
                        .col-sm-4
                          input(id="date" name="date" placeholder="MM/DD/YYYY" type="text" data-date-end-date="0d" required)
                        
                      
                        label(for="location").col-sm-2.control-label Location
                        .col-sm-4
                          input(type="text" name="location" required)
                          
                      .form-group
                        label(for="time").col-sm-2.control-label Time
                        .col-sm-4
                          input(type="time" name="time" required)
                          
                      
                        label(for="crimeType").col-sm-2.control-label Crime Type
                        .col-sm-4
                          input(type="text" name="crimeType" required)
                          
                      .form-group
                          label(for="status").col-sm-2.control-label Status
                          .col-sm-4
                            select
                              option(value="open").label.label-danger open
                              option(value="closed").label.label-primary closed
                      
                      .form-group
                        .col-sm-7.col-sm-offset-5   
                          button(type="submit").btn.btn-default Submit
                        
                    
          
                
              
                
      
        
          
        
