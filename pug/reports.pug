html(lang="en")
  head
    include includes/head.pug
    script(type="text/javascript" src="js/jquery.min.js")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css")
    script(type="text/javascript" src="js/datepicker.js")
    script(type="text/javascript" src="js/tableFilter.js")
    script(type="text/javascript" src="js/reset.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")

  body.backgroundcolor
    include includes/nav.pug
      ul.nav.navbar-nav.navbar-right
