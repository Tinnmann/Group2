  .container 
    .row
      .col-sm-12
        h2.text-center#whiteText Crime Reports
        .panel-body 
          .row
            .col-sm-3.col-sm-offset-9
              form(action="#" method="get")
                .input-group
                  input(type="text" name="q" placeholder="Search for" required).form-control#system-search
                  span.input-group-btn
                    button(type="submit").btn.btn-default
                      i.glyphicon.glyphicon-search
            
          .row
            .col-sm-12
              .table-responsive
                table.table.table-list-search#reportTable
                  thead
                    tr
                      th CrimeID
                      th Posted By:
                      th Date
                      th Location
                      th Time
                      th Crime Type
                      th Status
                      th Details
                      th Delete
                  tbody
                    tr
                      td test
                      td test
                      td test
                      td test
                      td test
                      td test
                      td 
                        span.label.label-warning Open
                      td
                        button(type="button" data-title="Details" data-toggle="modal" data-target="#detailsModal").btn.btn-success.btn-xs 
                          span.glyphicon.glyphicon-zoom-in
                      td 
                        button(type="button" name="delete").btn.btn-danger.btn-xs 
                          span.glyphicon.glyphicon-remove
                        
                        
                    tr
                      td test
                      td test
                      td test
                      td test
                      td test
                      td test
                      td 
                        span.label.label-primary closed
                      td
                          button(type="button" data-title="Details" data-toggle="modal" data-target="#detailsModal").btn.btn-success.btn-xs 
                            span.glyphicon.glyphicon-zoom-in
                      td 
                        button(type="button" name="delete").btn.btn-danger.btn-xs 
                          span.glyphicon.glyphicon-remove
          .row
            .col-sm-3
              button(type="button" data-toggle="modal" data-target="#myModal").btn.btn-info submit a Report 
            .col-sm-2.col-sm-offset-7
              button(type="button" data-toggle="modal" data-target="#uploadModal").btn.btn-info upload a file
            
              
          div(role="dialog").modal.fade#myModal
            .modal-dialog
      
              .modal-content
                .modal-header.text-center#header Submit a report
                  button(type="button" data-dismiss="modal").close &times
                        
                .modal-body
                  form(method="post" action="#" name="report-form")#report-form.form-horizontal
                    
                      .form-group
                        label(for ="officerID").col-sm-2.control-label Officer ID
                        .col-sm-4
                          input(type="text" name="officerID" required)
                         
                      .form-group
                        label(for="date").col-sm-2.control-label Date
                        .col-sm-4
                          input(id="date" name="date" placeholder="MM/DD/YYYY" type="text" data-date-end-date="0d" required)
                        
                      
                        label(for="location").col-sm-2.control-label Location
                        .col-sm-4
                          input(type="text" name="location" required)
                          
                      .form-group
                        label(for="time").col-sm-2.control-label Time
                        .col-sm-4
                          input(type="time" name="time" required)
                      
                        label(for="status").col-sm-2.control-label Status
                        .col-sm-4
                          select#modal-select
                            option(value="open" name="open") open
                            option(value="closed" name="closed") closed
                      
                      .form-group
                        label(for="crimeType").col-sm-2.control-label Crime Type
                        .col-sm-10
                          select(name = "crimeType")#modal-select
                            optgroup(label="Contact Crimes (Crimes against the person)")
                              option Murder
                              option Sexual offences
                              option Attempted Murder
                              option Assault with the intent to inflict grievous bodily
                              option Common assault
                              option Common robbery
                              option Robbery with aggravating circumstances
                            optgroup(label="Contact related crimes")
                              option Arson
                              option Malicious damage to property
                            optgroup(label="Property Related crimes")
                              option Burglary at non-residential premises
                              option Burglary at residential premises
                              option Theft of motor vehicle and motorcycle
                              option Theft out of or from motor vehicle
                              option Stock-theft
                            optgroup(label="Crime detected as a result of police action")
                              option Illegal possession of firearms and ammunition
                              option Drug related crime
                              option Driving under the influence of alcohol or drugs
                              option Sexual offences as a result of police action
                            optgroup(label="Other serious crimes")
                              option All theft not mentioned elsewhere
                              option Commercial crime
                              option Shoplifting
                            optgroup(label="Subcategories of aggravated robbery")
                              option Carjacking
                              option Truck hijacking
                              option Robbery at residential premises
                              option Robbery at non-residential premises
                              option Bank robbery
                              option Robbery of cash in transit
                            optgroup(label="Other ")
                              option Culpable homicide
                              option Public violence
                              option Crimen injuria
                              option Neglect and ill-treatment of children
                              option Kidnapping
                                              
                      .form-group
                        h3.col-sm-12.text-center#header Injured Party (optional)
                 
                        label(for="gender").col-sm-2.control-label Gender
                        .col-sm-4
                          select#modal-select
                            option(value="female" name="female") female
                            option(value="male" name="male") male
                            option(value="other" name="other") other
          
                        label(for="race").col-sm-2.control-label Race
                        .col-sm-4
                          input(type="text" name="race") 
                          
                      .form-group
                        .col-sm-2.col-sm-offset-5   
                          button(type="submit").btn.btn-default Submit
                                                
          div(role="dialog").modal.fade#detailsModal
            .modal-dialog
              .modal-content
                .modal-header.text-center#header More Details
                  button(type="button" data-dismiss="modal").close &times
                        
                .modal-body 
                  .row
                    .col-sm-6
                      label.control-label Date:
                      label(for="date" name="date").detailsLabel test
                  
                    .col-sm-6
                      label.control-label Location:
                      label(for="location" name="location").detailsLabel test 
                  
                  .row
                    .col-sm-6
                      label.control-label Injured party age:
                      label(for="time" name="time").detailsLabel test
                    .col-sm-6
                      label.control-label Injured party race:
                      label(for="time" name="time").detailsLabel test
                  
              
                  .row
                    .col-sm-6
                      label.control-label Injured party gender:
                      label(for="time" name="time").detailsLabel test
                      
                    .col-sm-6
                      label.control-label Crime Type:
                      label(for="crimeType" name="crimeType").detailsLabel test
                      
                  .row  
                    .col-sm-6
                      label.control-label Status:
                      label(for="status" name="status").detailsLabel Open
                    
                .modal-footer
                  button(type="button" data-dismiss="modal"  role="button").btn.btn-default Close
                    
          div(role="dialog").modal.fade#uploadModal
            .modal-dialog
              .modal-content
                .modal-header.text-center#header Select a file from your computer
                  button(type="button" data-dismiss="modal").close &times
                  
                .modal-body
                  form(action="" method="post" enctype="multipart/form-data" id="js-upload-form")
                    .form-inline
                      .form-group
                        .col-sm-4
                          input(type="file" name="file")
                      .form-group
                        .col-sm-4
                          button(type="submit" id="js-upload-submit").btn.btn-sm.btn-primary Upload files
                
      
                    
                  
                  
  
                          
                      

                
              
                
      
        
          
        
