doctype html
html(lang="en")
  head
    include includes/head.pug
    
  body.image-background
    include includes/nav.pug
      ul.nav.navbar-nav.navbar-right
        li
          a(href="index.html") Home
        li
          a(href="login.html") Login
        li
          a(href="reports.html") Reports
        li
          a(href="stats.html") Statistics
        li
          a(href="hotspots.html") Hotspots
        li
          a(href="contact.html") Contact Us
          
          
    .container
      .row
        .col-lg-6.col-lg-push-3.col-md-12
          h2#whiteText.text-center Register
      
          form(method="post" action="#").main-login.form-horizontal
            .form-group
              label(for="id").col-sm-2.control-label Officer ID
              .col-sm-10
                input(type="text" name="id" required).form-control
                  
            .form-group
              label(for="email").col-sm-2.control-label Email
              .col-sm-10
                input(type="email" name="email" required).form-control
                  
            .form-group
              label(for="password").col-sm-2.control-label Password
              .col-sm-10  
                input(type="password" name="password" required).form-control
            
            .form-group
              label(for="name").col-sm-2.control-label Name
              .col-sm-4
                input(type="text" name="name" required).form-control
                
              label(for="surname").col-sm-2.control-label Surname
              .col-sm-4
                input(type="text" name="surname" required).form-control
                            
            .form-group
              label(for="department").col-sm-2.control-label Police Station
              .col-sm-10
                input(type="text" name="department" required).form-control
            
            .form-group
              label(for="division").col-sm-2.control-label Division
              .col-sm-4
                input(type="text" name="division" required).form-control
                
              label(for="rank").col-sm-2.control-label Rank
              .col-sm-4
                input(type="text" name="rank" required).form-control
                
            .form-group
              .col-sm-offset-3.col-sm-9
                button(type="submit").btn.btn-primary.pull-right Submit
                    
                    
