<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Fill</servlet-name>
        <servlet-class>Fill</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>registerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Retrieve</servlet-name>
        <servlet-class>Retrieve</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LgServlet</servlet-name>
        <servlet-class>LgServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Edit</servlet-name>
        <servlet-class>Edit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DriverClass</servlet-name>
        <servlet-class>DriverClass</servlet-class>
    </servlet>
    <servlet>
	<servlet-name>ForgotPassword</servlet-name>
	<servlet-class>forgotPassword.servlets.ForgotPassword</servlet-class>
    </servlet>
 
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>forgotPassword.servlets.ChangePassword</servlet-class>
    </servlet>
    <servlet>
	<servlet-name>VerifyEmailHash</servlet-name>
	<servlet-class>forgotPassword.servlets.VerifyEmailHash</servlet-class>
    </servlet>   
    <servlet>
        <servlet-name>RegisterUser</servlet-name>
	<servlet-class>forgotPassword.servlets.RegisterUser</servlet-class>
    </servlet>  
    <servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>forgotPassword.servlets.login</servlet-class>
    </servlet>           
    <servlet-mapping>
        <servlet-name>Fill</servlet-name>
        <url-pattern>/Fill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Retrieve</servlet-name>
        <url-pattern>/Retrieve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LgServlet</servlet-name>
        <url-pattern>/LgServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Edit</servlet-name>
        <url-pattern>/Edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverClass</servlet-name>
        <url-pattern>/DriverClass</url-pattern>
    </servlet-mapping>  
    <servlet-mapping>
	<servlet-name>ForgotPassword</servlet-name>
	<url-pattern>/ForgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	<servlet-name>ChangePassword</servlet-name>
	<url-pattern>/createPass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyEmailHash</servlet-name>
        <url-pattern>/VerifyEmailHash</url-pattern>
    </servlet-mapping>   
    <servlet-mapping>
	<servlet-name>RegisterUser</servlet-name>
	<url-pattern>/register</url-pattern>
    </servlet-mapping> 
    <servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
    </servlet-mapping>       
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login.html</welcome-file>
        <welcome-file>stats.jsp</welcome-file>
        <welcome-file>hotspots.html</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
